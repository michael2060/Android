<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".okhttphw.OkhttpActivity">

    <Button
        android:id="@+id/btnweaterupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lbltempname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#3F51B5"
        android:textColor="@color/white"

        android:text="場所:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btnweaterupdate"
        app:layout_constraintTop_toBottomOf="@+id/btnweaterupdate" />

    <TextView
        android:id="@+id/txtplace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbltempname" />

    <TextView
        android:id="@+id/lblhumid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湿度:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/txtplace"
        app:layout_constraintTop_toBottomOf="@+id/txtplace" />

    <TextView
        android:id="@+id/txthumid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/lblhumid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lblhumid" />

    <TextView
        android:id="@+id/lbltemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="気温:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/txthumid"
        app:layout_constraintTop_toBottomOf="@+id/txthumid" />

    <TextView
        android:id="@+id/txttemp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lbltemp"
        app:layout_constraintTop_toBottomOf="@+id/lbltemp" />

    <ImageView
        android:id="@+id/imgweathericon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttemp"
        app:srcCompat="@drawable/gallery_img" />


</androidx.constraintlayout.widget.ConstraintLayout>