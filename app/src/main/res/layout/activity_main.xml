<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnHomework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnhomework"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linear_layout_label"
        app:layout_constraintStart_toStartOf="@+id/btnHomework"
        app:layout_constraintTop_toBottomOf="@+id/btnHomework" />

    <Button
        android:id="@+id/btnSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Spinner"
        app:layout_constraintLeft_toLeftOf="@id/btnLinearLayout"
        app:layout_constraintRight_toRightOf="@id/btnLinearLayout"
        app:layout_constraintStart_toStartOf="@+id/btnLinearLayout"
        app:layout_constraintTop_toBottomOf="@id/btnLinearLayout" />

    <Button
        android:id="@+id/btnIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/intent"
        app:layout_constraintStart_toStartOf="@+id/btnSpinner"
        app:layout_constraintTop_toBottomOf="@+id/btnSpinner" />

    <Button
        android:id="@+id/btnhwintent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Hwintent"
        app:layout_constraintStart_toStartOf="@+id/btnIntent"
        app:layout_constraintTop_toBottomOf="@+id/btnIntent" />

    <Button
        android:id="@+id/btnRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnhwintent" />

    <Button
        android:id="@+id/btnGson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRoom" />

    <Button
        android:id="@+id/btnokhttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="okhttp/Retrofit"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnGson"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnGson"
        app:layout_constraintTop_toBottomOf="@+id/btnGson" />

    <Button
        android:id="@+id/btnfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnokhttp" />

    <Button
        android:id="@+id/btndialogshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ダイアログ表示"
        app:layout_constraintStart_toStartOf="@+id/btnfragment"
        app:layout_constraintTop_toBottomOf="@+id/btnfragment" />

    <Button
        android:id="@+id/btntablayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tablayout+pageviewer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndialogshow" />


</androidx.constraintlayout.widget.ConstraintLayout>